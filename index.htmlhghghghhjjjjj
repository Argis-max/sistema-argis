<script>
    const WEB_APP_URL = "https://script.google.com/macros/s/AKfycbxdqQLgrzCucmQ5YS-Zk_ZH-gPfBlSn_V3H-mVaLp0DDz86qNXh8t1sKNS98BoMOOHi/exec";
    let usersDB = { "admin": { pass: "admin123", role: "ADMIN" } };
    let currentUser = null, db = [];
    const colors = [{n:"Azul",b:"#0000FF"},{n:"Naranja",b:"#FF8C00"},{n:"Verde",b:"#008000"},{n:"Marr√≥n",b:"#8B4513"},{n:"Gris",b:"#808080"},{n:"Blanco",b:"#FFFFFF",c:"#000"},{n:"Rojo",b:"#FF0000"},{n:"Negro",b:"#000000"},{n:"Amarillo",b:"#FFFF00",c:"#000"},{n:"Violeta",b:"#EE82EE",c:"#000"},{n:"Rosa",b:"#FFC0CB",c:"#000"},{n:"Aqua",b:"#00FFFF",c:"#000"}];

    async function login() {
        const u = document.getElementById('userInput').value.toLowerCase().trim(), p = document.getElementById('passInput').value.trim();
        if (usersDB[u] && String(usersDB[u].pass) === p) {
            currentUser = { name: u, ...usersDB[u] };
            document.getElementById('btnLogin').innerText = "CARGANDO...";
            try {
                const res = await fetch(`${WEB_APP_URL}?v=${Date.now()}`);
                const data = await res.json();
                if (data && Array.isArray(data)) {
                    db = data.map(i => ({ id: i.id || ('id-'+Math.random()), hub: i.hub||'-', ref: i.ref||'-', capacidad: i.capacidad||'-', extra: i.extra||'-', bufferColor: i.bufferColor||'', alim: i.alim||'-', label: i.label||'-', colorBg: i.colorBg||'#ccc', colorText: i.colorText||'#fff', cliente: i.cliente||'-', potencia: i.potencia||'-', dist: i.dist||'0', type: i.type||'TR' }));
                }
            } catch (e) { db = JSON.parse(localStorage.getItem('fiber_db')) || []; }
            document.getElementById('loginScreen').style.display = 'none';
            applyPermissions(); initFilterRow(); renderAll();
        } else alert("Error");
    }

    function applyPermissions() {
        // CORRECCI√ìN: Usamos currentUser.role directamente para que el bot√≥n MEN√ö nunca desaparezca
        const isAdmin = (currentUser && currentUser.role === "ADMIN");
        document.getElementById('userTag').innerText = currentUser.name.toUpperCase();
        document.querySelectorAll('.admin-only').forEach(el => el.style.display = isAdmin ? (el.tagName==='TH'||el.tagName==='TD'?'table-cell':'block') : 'none');
    }

    function getEstado(c) {
        let t = String(c || "-").toUpperCase().trim();
        if(t.includes("DA√ëADO")) return "DA√ëADO";
        if(t==="" || t==="-") return "LIBRE";
        if(t.includes("PROYECTADO")) return "PROYECTADO";
        return "OCUPADO";
    }

    function renderAll() {
        const q = document.getElementById('search').value.toLowerCase();
        const tbody = document.getElementById('dataTable'); tbody.innerHTML = "";
        let t=0, l=0, o=0, p=0, d=0;
        db.forEach(i => {
            if (Object.values(i).some(v => String(v).toLowerCase().includes(q))) {
                let est = getEstado(i.cliente);
                t++; if(est==="LIBRE") l++; else if(est==="OCUPADO") o++; else if(est==="PROYECTADO") p++; else d++;
                const row = tbody.insertRow();
                const ro = (currentUser.role === "ADMIN") ? "" : "readonly";
                row.innerHTML = `<td><b>${i.hub}</b></td><td>${i.ref}</td><td>${i.capacidad}</td><td>${i.bufferColor?`<span class="buffer-circle" style="background:${i.bufferColor}"></span>`:''}${i.extra}</td><td><input class="input-inline" style="color:blue" value="${i.alim}" ${ro} onchange="edit('${i.id}','alim',this.value)"></td><td><span class="color-tag" style="background:${i.colorBg}; color:${i.colorText}">${i.label}</span></td><td><input class="input-inline" value="${i.cliente}" ${ro} onchange="edit('${i.id}','cliente',this.value)"></td><td><input class="input-inline" style="color:red; font-weight:bold" value="${i.potencia}" ${ro} onchange="edit('${i.id}','potencia',this.value)"></td><td class="status-${est.toLowerCase().replace('√±','n')}">${est}</td><td><input class="input-inline" value="${i.dist}" ${ro} onchange="edit('${i.id}','dist',this.value)"></td><td class="admin-only"><button onclick="del('${i.id}')">‚úñ</button></td>`;
            }
        });
        document.getElementById('cTotal').innerText = t; document.getElementById('cLibre').innerText = l; document.getElementById('cOcupado').innerText = o; document.getElementById('cProy').innerText = p; document.getElementById('cDanado').innerText = d;
        applyPermissions();
    }

    function edit(id, p, v) { let item = db.find(x => x.id === id); if(item) { item[p] = v; localStorage.setItem('fiber_db', JSON.stringify(db)); } }
    function del(id) { if(confirm("¬øEliminar?")) { db = db.filter(x => x.id !== id); renderAll(); } }
    async function botonX() { const btn = document.getElementById('btnSaveTop'); btn.innerText="..."; try { await fetch(WEB_APP_URL, { method: 'POST', mode: 'no-cors', body: JSON.stringify(db) }); alert("Guardado"); } catch(e) { alert("Error"); } btn.innerText="GUARDAR"; }

    function openPanel(type) {
        document.getElementById('panelFields').classList.add('active'); document.getElementById('overlay').classList.add('active');
        const c = document.getElementById('panelContent'), b = document.getElementById('btnAction'), t = document.getElementById('panelTitle');
        if(type==='TR') {
            t.innerText = "NUEVA TRONCAL"; c.innerHTML = `HUB:<input id="p1" value="HUB-01"> ODF:<input id="p2" value="ODF-A"> CABLE:<input id="p3" value="T-01"> FOS:<input type="number" id="p4" value="24">`;
            b.onclick = () => { const cap = parseInt(document.getElementById('p4').value); for(let i=1; i<=cap; i++) { let colH = colors[(i-1)%12], bNum = Math.ceil(i/12), colB = colors[(bNum-1)%12]; db.push({id:'t'+Date.now()+i, hub:document.getElementById('p1').value, ref:document.getElementById('p2').value, alim:document.getElementById('p3').value, capacidad:cap+'FO', label:'Hilo '+i, colorBg:colH.b, colorText:colH.c||"#fff", extra:'Buffer '+bNum, bufferColor:colB.b, cliente:"-", potencia:"-", dist:"0", type:'TR'}); } finish(); };
        } else if(type==='MOD') {
            t.innerText = "MODULAR"; c.innerHTML = `HUB:<input id="p1" value="HUB-01"> PM:<input id="p2" value="PM-01"> TIPO:<select id="p3"><option value="1x8">1x8</option><option value="1x16">1x16</option></select> PREFIJO:<input id="p4" value="S-01">`;
            b.onclick = () => { const q = parseInt(document.getElementById('p3').value.split('x')[1]); for(let i=1; i<=q; i++) db.push({id:'m'+Date.now()+i, hub:document.getElementById('p1').value, ref:document.getElementById('p2').value, alim:'IN', capacidad:document.getElementById('p3').value, label:document.getElementById('p4').value+'-'+i, colorBg:'#f39c12', colorText:'#fff', extra:'Slot 1', cliente:"-", potencia:"-", dist:"0", type:'MOD'}); finish(); };
        } else if(type==='SW') {
            t.innerText = "SWITCH"; c.innerHTML = `HUB:<input id="p1"> SW:<input id="p2"> PUERTOS:<input type="number" id="p3" value="24">`;
            b.onclick = () => { for(let i=1; i<=parseInt(document.getElementById('p3').value); i++) db.push({id:'s'+Date.now()+i, hub:document.getElementById('p1').value, ref:document.getElementById('p2').value, alim:'LAN', capacidad:'1G', label:'Port '+i, colorBg:'#10b981', colorText:'#fff', extra:'RJ45', cliente:"-", potencia:"-", dist:"0", type:'SW'}); finish(); };
        } else if(type==='EDFA') {
            t.innerText = "EDFA"; c.innerHTML = `HUB:<input id="p1"> EQ:<input id="p2"> OUTS:<input type="number" id="p3" value="32">`;
            b.onclick = () => { for(let i=1; i<=parseInt(document.getElementById('p3').value); i++) db.push({id:'e'+Date.now()+i, hub:document.getElementById('p1').value, ref:document.getElementById('p2').value, alim:'OLT', capacidad:'+19dBm', label:'WDM-'+i, colorBg:'#e11d48', colorText:'#fff', extra:'OUT', cliente:"-", potencia:"-", dist:"0", type:'EDFA'}); finish(); };
        } else if(type==='OLT') {
            t.innerText = "OLT"; c.innerHTML = `HUB:<input id="p1"> OLT:<input id="p2"> PONS:<input type="number" id="p3" value="16">`;
            b.onclick = () => { for(let i=1; i<=parseInt(document.getElementById('p3').value); i++) db.push({id:'o'+Date.now()+i, hub:document.getElementById('p1').value, ref:document.getElementById('p2').value, alim:'SFP', capacidad:'GPON', label:'PON-'+i, colorBg:'#8b5cf6', colorText:'#fff', extra:'Slot 1', cliente:"-", potencia:"-", dist:"0", type:'OLT'}); finish(); };
        } else if(type==='FILES') {
            t.innerText = "SISTEMA"; c.innerHTML = `<button onclick="clearDB()" style="background:red; color:white; width:100%; padding:10px; border:none; border-radius:5px;">VACIAR TODO</button>`; b.style.display="none";
        }
    }

    function finish() { closePanels(); renderAll(); }
    function closePanels() { document.querySelectorAll('.active').forEach(e => e.classList.remove('active')); }
    function toggleSidebar() { document.getElementById('sidebar').classList.toggle('active'); document.getElementById('overlay').classList.toggle('active'); }
    function clearDB() { if(confirm("¬øVACIAR?")) { db = []; renderAll(); botonX(); } }
    function initFilterRow() {}
    function logout() { location.reload(); }
</script>
</body>
