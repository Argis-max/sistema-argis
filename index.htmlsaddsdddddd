<script>
    // URL ACTUALIZADA
    const WEB_APP_URL = "https://script.google.com/macros/s/AKfycbxdqQLgrzCucmQ5YS-Zk_ZH-gPfBlSn_V3H-mVaLp0DDz86qNXh8t1sKNS98BoMOOHi/exec";

    let usersDB = JSON.parse(localStorage.getItem('argis_users')) || { "admin": { pass: "admin123", role: "ADMIN" } };
    let currentUser = null;
    let db = [];

    const colors = [{n:"Azul",b:"#0000FF"},{n:"Naranja",b:"#FF8C00"},{n:"Verde",b:"#008000"},{n:"Marr√≥n",b:"#8B4513"},{n:"Gris",b:"#808080"},{n:"Blanco",b:"#FFFFFF",c:"#000"},{n:"Rojo",b:"#FF0000"},{n:"Negro",b:"#000000"},{n:"Amarillo",b:"#FFFF00",c:"#000"},{n:"Violeta",b:"#EE82EE",c:"#000"},{n:"Rosa",b:"#FFC0CB",c:"#000"},{n:"Aqua",b:"#00FFFF",c:"#000"}];

    async function login() {
        const u = document.getElementById('userInput').value.toLowerCase().trim();
        const p = document.getElementById('passInput').value.trim();
        const btn = document.getElementById('btnLogin');

        if (usersDB[u] && String(usersDB[u].pass) === p) {
            currentUser = { name: u, ...usersDB[u] };
            btn.innerText = "Conectando..."; btn.disabled = true;

            try {
                const response = await fetch(`${WEB_APP_URL}?v=${Date.now()}`);
                const dataCloud = await response.json();
                if (dataCloud && Array.isArray(dataCloud)) {
                    db = dataCloud.map(item => ({
                        id: item.id || ('id-'+Math.random()),
                        hub: item.hub || '-', ref: item.ref || '-', capacidad: item.capacidad || '-',
                        extra: item.extra || '-', bufferColor: item.bufferColor || '',
                        alim: item.alim || '-', label: item.label || '-',
                        colorBg: item.colorBg || '#ccc', colorText: item.colorText || '#fff',
                        cliente: item.cliente || '-', potencia: item.potencia || '-',
                        dist: item.dist || '0', type: item.type || 'TR'
                    }));
                }
            } catch (e) { db = JSON.parse(localStorage.getItem('fiber_v29_final_base')) || []; }

            document.getElementById('loginScreen').style.display = 'none';
            applyPermissions(); 
            initFilterRow(); 
            renderAll();
        } else { alert("Acceso denegado."); }
    }

    function applyPermissions() {
        // CORRECCI√ìN: Fuerza la visibilidad bas√°ndose en el login actual
        const isAdmin = (currentUser && currentUser.role === "ADMIN");
        document.getElementById('userTag').innerText = currentUser ? currentUser.name.toUpperCase() : "";
        
        document.querySelectorAll('.admin-only').forEach(el => {
            if(el.tagName === 'TH' || el.tagName === 'TD') {
                el.style.display = isAdmin ? 'table-cell' : 'none';
            } else {
                el.style.display = isAdmin ? 'block' : 'none';
            }
        });
    }

    function initFilterRow() {
        const row = document.getElementById('filterRow');
        let html = '';
        for(let i=0; i<10; i++) html += `<th><select class="filter-select" onchange="renderAll()"><option value="">Todo</option></select></th>`;
        html += `<th class="admin-only"></th>`;
        row.innerHTML = html;
    }

    function updateFilters() {
        const selects = document.querySelectorAll('.filter-select');
        const keys = ['hub', 'ref', 'capacidad', 'extra', 'alim', 'label', 'cliente', 'potencia', 'estado', 'dist'];
        keys.forEach((key, index) => {
            if(!selects[index]) return;
            const currentVal = selects[index].value;
            let options = [...new Set(db.map(item => key === 'estado' ? getEstado(item.cliente) : (item[key] || "-")))].sort();
            let html = '<option value="">Todo</option>';
            options.forEach(opt => html += `<option value="${opt}" ${String(opt) === currentVal ? 'selected' : ''}>${opt}</option>`);
            selects[index].innerHTML = html;
        });
    }

    function getEstado(c) {
        let t = String(c || "-").toUpperCase().trim();
        if(t.includes("DA√ëADO") || t.includes("FALLA")) return "DA√ëADO";
        if(t==="" || t==="-") return "LIBRE";
        if(t.includes("PROYECTADO")) return "PROYECTADO";
        return "OCUPADO";
    }

    function renderAll() {
        const q = document.getElementById('search').value.toLowerCase();
        const selects = document.querySelectorAll('.filter-select');
        const tbody = document.getElementById('dataTable'); tbody.innerHTML = "";
        updateFilters(); 
        
        db.forEach(i => {
            let est = getEstado(i.cliente);
            const rowVals = [i.hub, i.ref, i.capacidad, i.extra, i.alim, i.label, i.cliente, i.potencia, est, i.dist];
            const searchMatch = Object.values(i).some(v => String(v).toLowerCase().includes(q));
            const filterMatch = Array.from(selects).every((sel, idx) => sel.value === "" || String(rowVals[idx]) === sel.value);
            
            if (searchMatch && filterMatch) {
                const row = tbody.insertRow();
                let bufHTML = i.bufferColor ? `<div><span class="buffer-circle" style="background:${i.bufferColor}"></span>${i.extra}</div>` : i.extra;
                const ro = (currentUser.role === "ADMIN") ? "" : "readonly";

                row.innerHTML = `
                    <td><b>${i.hub}</b></td><td>${i.ref}</td><td>${i.capacidad}</td><td>${bufHTML}</td>
                    <td><input class="input-inline" style="color:blue" value="${i.alim}" ${ro} onchange="edit('${i.id}','alim',this.value)"></td>
                    <td><span class="color-tag" style="background:${i.colorBg}; color:${i.colorText}">${i.label}</span></td>
                    <td><input class="input-inline" value="${i.cliente}" ${ro} onchange="edit('${i.id}','cliente',this.value)"></td>
                    <td><input class="input-inline" style="color:red; font-weight:bold" value="${i.potencia}" ${ro} onchange="edit('${i.id}','potencia',this.value)"></td>
                    <td class="status-${est.toLowerCase().replace('√±','n')}">${est}</td>
                    <td><input class="input-inline" value="${i.dist}" ${ro} onchange="edit('${i.id}','dist',this.value)"></td>
                    <td class="admin-only"><button onclick="del('${i.id}')" style="color:red; border:none; background:none;">‚úñ</button></td>`;
            }
        });
        updateStats();
        applyPermissions(); // Vital para mantener botones visibles
    }

    function updateStats() {
        let t=db.length, l=0, o=0, p=0, d=0;
        db.forEach(i => {
            let e = getEstado(i.cliente);
            if(e==="LIBRE") l++; else if(e==="OCUPADO") o++; else if(e==="PROYECTADO") p++; else d++;
        });
        document.getElementById('cTotal').innerText = t; document.getElementById('cLibre').innerText = l;
        document.getElementById('cOcupado').innerText = o; document.getElementById('cProy').innerText = p; document.getElementById('cDanado').innerText = d;
    }

    function edit(id, p, v) { let item = db.find(x => x.id === id); if(item) item[p] = v; }
    function del(id) { if(confirm("¬øEliminar?")) { db = db.filter(x => x.id !== id); renderAll(); } }

    async function botonX() {
        const btn = document.getElementById('btnSaveTop');
        btn.innerText = "GUARDANDO..."; btn.disabled = true;
        try {
            await fetch(WEB_APP_URL, { method: 'POST', mode: 'no-cors', body: JSON.stringify(db) });
            localStorage.setItem('fiber_v29_final_base', JSON.stringify(db));
            alert("Sincronizado.");
        } catch (e) { alert("Error de red."); }
        btn.innerText = "GUARDAR"; btn.disabled = false;
    }

    function openPanel(type) {
        document.getElementById('panelFields').classList.add('active');
        document.getElementById('overlay').classList.add('active');
        const c = document.getElementById('panelContent');
        const b = document.getElementById('btnAction');
        b.style.display = "block";
        
        if(type==='TR') {
            document.getElementById('panelTitle').innerText = "NUEVA TRONCAL";
            c.innerHTML = `HUB:<input id="p1" value="HUB-01"> ODF:<input id="p2" value="ODF-A"> CABLE:<input id="p3" value="T-01"> FOS:<input type="number" id="p4" value="24">`;
            b.onclick = () => {
                const cap = parseInt(document.getElementById('p4').value);
                for(let i=1; i<=cap; i++) {
                    let colH = colors[(i-1)%12], bNum = Math.ceil(i/12), colB = colors[(bNum-1)%12];
                    db.push({id:'t'+Date.now()+i, hub:document.getElementById('p1').value, ref:document.getElementById('p2').value, alim:document.getElementById('p3').value, capacidad:cap+'FO', label:'Hilo '+i, colorBg:colH.b, colorText:colH.c||"#fff", extra:'Buffer '+bNum, bufferColor:colB.b, cliente:"-", potencia:"-", dist:"0", type:'TR'});
                }
                finish();
            };
        } else if(type==='FILES') {
            document.getElementById('panelTitle').innerText = "SISTEMA";
            c.innerHTML = `<button onclick="clearDB()" style="background:red; color:white; width:100%; padding:10px; border:none; border-radius:5px;">BORRAR TODO</button>`;
            b.style.display = "none";
        }
    }

    function finish() { closePanels(); renderAll(); }
    function closePanels() { document.querySelectorAll('.active').forEach(e => e.classList.remove('active')); }
    function toggleSidebar() { document.getElementById('sidebar').classList.toggle('active'); document.getElementById('overlay').classList.toggle('active'); }
    function clearDB() { if(confirm("¬øVACIAR TODO?")) { db = []; renderAll(); botonX(); } }
    function logout() { location.reload(); }
</script>
</body>
</html>
